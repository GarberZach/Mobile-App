<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Meal_List">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/mealName"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Title"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="4dp"
                android:id="@+id/ingredients"

                android:layout_below="@id/mealName"
                android:text="Ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cookingNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CookingNotes"
                android:layout_below="@id/ingredients"/>
            <TextView
                android:id="@+id/dateAdded"
                android:layout_marginTop="4dp"
                android:text="Date Added: 12/15/2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cookingNotes" />

            <TableRow
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button android:id="@+id/editButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/ic_menu_edit" />

                <Button android:id="@+id/deleteButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:drawable/ic_delete" />

            </TableRow>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>